<div class="page-header">
<h1>All of the Statuses</h1>
</div>
<div class="btn-group btn-success">
<button type="button" class="btn btn-success"><%= link_to "Post a New Status", new_status_path %></button>
</div>

<% @statuses.each do |status| %>
<div class = "status">
	<strong><%=status.name %></strong>
		<p><%= status.stringcontent %></p>
		<div class="meta">
			<%= link_to time_ago_in_words(status.created_at)+" ago", status%> |
			<%= link_to 'Show', status %> |
		
		<span class="admin">
			<%= link_to "Edit", edit_status_path(status) %> |
			<%= link_to "Delete", status, method: :delete, data: {confirm: "are you sure you want to delete this status"} %>
	</div>
	</div>
<% end %>

